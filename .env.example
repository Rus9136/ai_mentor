# Application Settings
ENVIRONMENT=development
DEBUG=True
APP_NAME=AI Mentor
APP_VERSION=0.1.0

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Database Configuration
DATABASE_URL=postgresql+asyncpg://ai_mentor_user:ai_mentor_pass@localhost:5432/ai_mentor_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=False

# Security & Authentication
SECRET_KEY=your-secret-key-here-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Hashing
BCRYPT_ROUNDS=12

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
CORS_CREDENTIALS=True
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# OpenAI Configuration (для RAG системы)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# RAG Configuration
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7
VECTOR_DIMENSION=1536

# Mastery Algorithm Settings
MASTERY_WINDOW_SIZE=3
MASTERY_A_THRESHOLD=0.85
MASTERY_B_THRESHOLD=0.65
MASTERY_C_THRESHOLD=0.0

# Sync Service Settings
SYNC_BATCH_SIZE=100
SYNC_MAX_RETRIES=3
SYNC_RETRY_DELAY=5

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Testing
TEST_DATABASE_URL=postgresql+asyncpg://ai_mentor_user:ai_mentor_pass@localhost:5432/ai_mentor_test_db

# Mobile App Configuration
MOBILE_APP_VERSION=1.0.0
MOBILE_MIN_VERSION=1.0.0
