# ==========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ==========================================
# ВАЖНО: Скопируйте этот файл в backend/.env на сервере
# и заполните реальными значениями!
# НЕ КОММИТЬТЕ ЭТОТ ФАЙЛ С РЕАЛЬНЫМИ СЕКРЕТАМИ В GIT!
# ==========================================

# Application Settings
ENVIRONMENT=production
DEBUG=False
APP_NAME=AI Mentor
APP_VERSION=0.1.0

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=False

# ==========================================
# DATABASE CONFIGURATION (ОБЯЗАТЕЛЬНО!)
# ==========================================
# ВАЖНО: Используй ai_mentor_app для runtime, ai_mentor_user для миграций
POSTGRES_DB=ai_mentor_db
POSTGRES_USER=ai_mentor_app
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_MIN_32_CHARS

# Database URL для приложения
DATABASE_URL=postgresql+asyncpg://ai_mentor_app:CHANGE_ME_STRONG_PASSWORD_MIN_32_CHARS@postgres:5432/ai_mentor_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=False

# ==========================================
# SECURITY & AUTHENTICATION (ОБЯЗАТЕЛЬНО!)
# ==========================================
# Сгенерируй SECRET_KEY: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_USE_OPENSSL_RAND_HEX_32_TO_GENERATE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Hashing
BCRYPT_ROUNDS=12

# ==========================================
# CORS SETTINGS
# ==========================================
CORS_ORIGINS=["https://ai-mentor.kz","https://admin.ai-mentor.kz","https://api.ai-mentor.kz","https://www.ai-mentor.kz"]
CORS_CREDENTIALS=True
CORS_METHODS=["GET","POST","PUT","DELETE","PATCH","OPTIONS"]
CORS_HEADERS=["*"]

# ==========================================
# OPENAI CONFIGURATION (ОБЯЗАТЕЛЬНО!)
# ==========================================
OPENAI_API_KEY=sk-CHANGE_ME_YOUR_OPENAI_API_KEY
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# ==========================================
# RAG CONFIGURATION
# ==========================================
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7
VECTOR_DIMENSION=1536

# ==========================================
# MASTERY ALGORITHM SETTINGS
# ==========================================
MASTERY_WINDOW_SIZE=3
MASTERY_A_THRESHOLD=0.85
MASTERY_B_THRESHOLD=0.65
MASTERY_C_THRESHOLD=0.0

# ==========================================
# SYNC SERVICE SETTINGS
# ==========================================
SYNC_BATCH_SIZE=100
SYNC_MAX_RETRIES=3
SYNC_RETRY_DELAY=5

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ==========================================
# BACKUP CONFIGURATION (опционально)
# ==========================================
# Настройте автоматический бэкап PostgreSQL
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *  # Каждый день в 2:00 AM
BACKUP_RETENTION_DAYS=30

# ==========================================
# EMAIL CONFIGURATION (если нужно)
